                "sk": "Okno",
                "en": "Window"
            },
            "actions": [
                {
                    "say": {
                        "sk": "To je okno.",
                        "en": "This is a window."
                    }
                },
                {
                    "say": {
                        "sk": "Pozerať sa ľuďom do okien je neslušné.",
