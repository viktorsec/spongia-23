{
    "id": "a3_cannon",
    "background": "a3_cannon/background.png",
    "mask": "a3_cannon/zones.png",
    "zones": [
        {
            "color": "#FF0000",
            "cursor": "s-resize",
            "actions": [
                {
                    "goto": "a3_desert3"
                }
            ]
        },
        {
            "color": "#0000FF",
            "actions": [
                {
                    "conditions": { "hasFlagsNot": "placed_barrel" },
                    "say": "To je delo, ale chýba mu hlaveň."
                },
                {
                    "conditions": { "hasFlags": "placed_barrel", "hasFlagsNot": "placed_bullet" },
                    "say": "To je delo, ale chýba mu náboj."
                },
                {
                    "conditions": { "hasFlags": "placed_bullet" },
                    "say": "Nabité delo, už len treba vystreliť."
                },
                {
                    "trigger": "barrel",
                    "say": "To by šlo namontovať do tej diery."
                },
                {
                    "trigger": "cannonball",
                    "conditions": { "hasFlagsNot": "placed_barrel" },
                    "say": "Chýba tomu hlaveň, kam by sa ten náboj dal."
                },
                {
                    "trigger": "cannonball",
                    "conditions": { "hasFlags": "placed_barrel", "hasFlagsNot": "placed_bullet" },
                    "takeItem": "cannonball",
                    "setFlag": "placed_bullet",
                    "say": "Nabité!"
                },
                {
                    "trigger": "match_lit",
                    "conditions": { "hasFlagsNot": "placed_bullet" },
                    "say": "Bez náboja je zbytočné strielať."
                },
                {
                    "trigger": "match_lit",
                    "conditions": { "hasFlags": "placed_bullet" },
                    "say": "BUM!",
                    "takeItem": "match_lit",
                    "goto": "a4_finale"
                },
                {
                    "trigger": "match",
                    "conditions": { "hasFlags": "placed_bullet" },
                    "say": "Zápalka nehorí, to mi je nanič."
                }
            ]
        },
        {
            "color": "#00FF00",
            "actions": [
                {
                    "conditions": { "hasFlagsNot": "placed_barrel" },
                    "say": "Sem by sa dala namontovať hlaveň."
                },
                {
                    "trigger": "barrel",
                    "conditions": { "hasFlagsNot": "placed_barrel" },
                    "takeItem": "barrel",
                    "setFlag": "placed_barrel,placed_barrel_a,placed_barrel",
                    "say": "Dúfam, že to nie je naopak. Možno to treba otočiť."
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_a" },
                    "say": "Hej, toto sa mi zdá správne.",
                    "setFlag": "placed_barrel_b",
                    "unsetFlag": "placed_barrel_a"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_b" },
                    "say": "Hej, toto sa mi zdá správne.",
                    "setFlag": "placed_barrel_a",
                    "unsetFlag": "placed_barrel_b"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_a" },
                    "say": "Hmm, možno to bolo predsa lepšie tak, ako to bolo.",
                    "setFlag": "placed_barrel_b",
                    "unsetFlag": "placed_barrel_a"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_b" },
                    "say": "Hmm, možno to bolo predsa lepšie tak, ako to bolo.",
                    "setFlag": "placed_barrel_a",
                    "unsetFlag": "placed_barrel_b"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_a" },
                    "say": "Možno je jedno ako to namontujem?",
                    "setFlag": "placed_barrel_b",
                    "unsetFlag": "placed_barrel_a"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_b" },
                    "say": "Možno je jedno ako to namontujem?",
                    "setFlag": "placed_barrel_a",
                    "unsetFlag": "placed_barrel_b"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_a" },
                    "say": "Nie som expert, ale toto sa mi zdá naopak...",
                    "setFlag": "placed_barrel_b",
                    "unsetFlag": "placed_barrel_a"
                },
                {
                    "conditions": { "hasFlags": "placed_barrel_b" },
                    "say": "Nie som expert, ale toto sa mi zdá naopak...",
                    "setFlag": "placed_barrel_a",
                    "unsetFlag": "placed_barrel_b"
                },
                {
                    "trigger": "cannonball",
                    "conditions": { "hasFlags": "placed_barrel", "hasFlagsNot": "placed_bullet" },
                    "takeItem": "cannonball",
                    "setFlag": "placed_bullet",
                    "say": "Nabité!"
                },
                {
                    "trigger": "cannonball",
                    "conditions": { "hasFlagsNot": "placed_barrel" },
                    "say": "Keby to malo hlaveň dalo by sa to nabiť."
                }
            ]
        }
    ],
    "overlays": [
        {
            "image": "a3_cannon/barrel_a.png",
            "conditions": {
                "hasFlags": "placed_barrel_a"
            }
        },
        {
            "image": "a3_cannon/barrel_b.png",
            "conditions": {
                "hasFlags": "placed_barrel_b"
            }
        }
    ]
