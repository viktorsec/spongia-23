        {
            "color": "#FF0000",
            "cursor": "s-resize",
            "actions": [
                {
                    "goto": "a2_quarry"
                }
            ]
        },
        {
            "color": "#00FF00",
            "tooltip": "Strážny robot",
            "actions": [
                {
                    "conditions": {
                        "hasItemNot": "shirt_glowing"
                    },
                    "say": "Robot: Strážim, aby sem mohla vôjsť len údržba."
                },
                {
                    "conditions": {
                        "hasItemNot": "shirt_glowing"
                    },
                    "say": "Robot: Neviem čo to je „údržba“, ale povedali mi, že má vestu čo svieti."
                },
                {
                    "conditions": {
                        "hasItem": "shirt_glowing"
                    },
                    "say": "Robot: Ah! Údržba! Konečne."
                },
                {
                    "trigger": "camera",
                    "say": "Robot: Toto nie je turistická atrakcia."
                },
                {
                    "trigger": "barrel",
                    "say": "Robot: Už bolo na čase to vymeniť. Dáfam, že čoskoro nainštalujete novú."
                },
                {
                    "trigger": "upberry",
                    "say": "Robot: Organická potrava nie je pre mňa potrebná."
                },
                {
                    "trigger": "downberry",
                    "say": "Robot: Organická potrava nie je pre mňa potrebná."
                },
                {
                    "trigger": "zapberry",
                    "say": "Robot: To by ma mohlo zoskratovať."
                },
                {
                    "trigger": "important_key",
                    "say": "Robot: S takým kľúčom sa určite dostanene na nejaké doležité miesto, ale sem vás to nepustí."
                },
                {
                    "trigger": "wrench",
                    "say": "Robot: S takým ma vyrobili."
                },
                {
                    "trigger": "shirt",
                    "say": "Robot: Pekné tričko, ale svietiaca vesta to nie je."
                },
                {
                    "trigger": "shirt_glowing",
                    "say": "Robot: Bájna údržbárska vesta."
                },
                {
                    "trigger": "match_lit",
                    "say": "Robot: To je údržbársky nástroj?"
                },
                {
                    "trigger": "$FALLBACK",
                    "say": "Robot: O tomto nemám žiadnu informáciu."
                }
            ]
        },
        {
            "color": "#0000FF",
            "cursor": "n-resize",
            "actions": [
                {
                    "conditions": {
                        "hasItem": "shirt_glowing"
                    },
                    "goto": "a3_cave_entrance"
                },
                {
                    "conditions": {
                        "hasItemNot": "shirt_glowing"
                    },
                    "say": "Robot: BEEP BOOP Ďalej vás nesmiem pustiť, vstup len pre údržbu."
                }
            ]
        }
    ]
